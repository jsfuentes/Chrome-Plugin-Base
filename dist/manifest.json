{
  "name": "Chrome Plugin Base",
  "version": "0.0.3",
  "description": "Test base",
  "manifest_version": 3,
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "identity",
    "identity.email",
    "management"
  ],

  "host_permissions": ["*://*/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["build/content.js"],
      "css": ["style.css"]
    }
  ],

  "background": {
    "service_worker": "build/service_worker.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icon.png",
    "24": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
