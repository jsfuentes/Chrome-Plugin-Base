{
  "name": "chrome-plugin-base",
  "version": "0.0.3",
  "description": "Make web fun again",
  "main": "dist/build/service_worker.js",
  "scripts": {
    "build:content": "parcel build scripts/content/content.ts -d dist/build/ -o content.js --public-url ./",
    "watch:content": "parcel watch --no-hmr scripts/content/content.ts -d dist/build/ -o content.js --public-url ./",
    "build:service_worker": "parcel build scripts/service_worker/service_worker.ts -d dist/build/ -o service_worker.js --public-url ./",
    "watch:service_worker": "parcel watch --no-hmr scripts/service_worker/service_worker.ts -d dist/build/ -o service_worker.js --public-url ./",
    "build:popup": "parcel build --no-hmr scripts/popup/popup.tsx -d dist/build/ -o popup.js --public-url ./",
    "watch:popup": "parcel watch --no-hmr scripts/popup/popup.tsx -d dist/build/ -o popup.js --public-url ./",
    "build": "concurrently \"npm run build:content\" \"npm run build:service_worker\" \"npm run build:popup\"",
    "watch": "concurrently \"npm run watch:content\" \"npm run watch:service_worker\" \"npm run watch:popup\"",
    "clean": "rm -rf node_modules && rm package-lock.json"
  },
  "targets": {
    "default": {
      "sourceMap": {
        "inline": true
      }
    }
  },
  "author": "Jorge Fuentes",
  "dependencies": {
    "axios": "^1.6.8",
    "debug": "^4.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/runtime": "^7.24.5",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "chrome-types": "^0.1.282",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "parcel-bundler": "^1.12.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
